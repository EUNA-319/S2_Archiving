<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentBottom="true"
    android:padding="20dp"
    android:background="@drawable/background"
    tools:context=".EditPostActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivEditPostClose"
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:srcCompat="@drawable/close_btn" />

        <TextView
            android:id="@+id/tvEditPostName"
            android:layout_marginLeft="50dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:textAlignment="center"
            android:text="조윤진"
            android:fontFamily="@font/applesdgothic_bold"
            android:textColor="#000000"
            android:textSize="30sp"/>


        <Button
            android:id="@+id/btnEditPostRegister"
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:fontFamily="@font/applesdgothic_regular"
            android:background="@drawable/finish"
            android:textSize="30sp"
            android:gravity="center_horizontal"/>

    </LinearLayout>


    <EditText
        android:id="@+id/etEditPostDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="날짜를 입력하세요(6자리 ex.220101)"
        android:fontFamily="@font/applesdgothic_regular"
        android:background="@drawable/edge_round_top"
        android:inputType="textPersonName"
        android:padding="14dp"
        />

    <EditText
        android:id="@+id/etEditPostName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="기념일 이름을 입력하세요"
        android:fontFamily="@font/applesdgothic_regular"
        android:background="@drawable/edge"
        android:inputType="textPersonName"
        android:padding="10dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:background="@drawable/edge"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivEditPostCamera"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/camera_btn"/>

        <TextView
            android:id="@+id/tvEditWriteImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="10dp"
            android:fontFamily="@font/applesdgothic_regular"
            android:text="선물, 편지 등의 사진을 업로드 하세요"
            android:textSize="16sp" />

    </LinearLayout>

    <EditText
        android:id="@+id/etEditWritePost"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="30dp"
        android:background="@drawable/edge_round_bottom"
        android:ems="10"
        android:fontFamily="@font/applesdgothic_regular"
        android:hint="글쓰기"
        android:padding="10dp" />


</LinearLayout>