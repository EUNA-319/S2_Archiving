<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context="com.cookandroid.s2_archiving.fragment.ViewoneFragment">

    <Button
        android:id="@+id/btnViewOneBack"
        android:layout_width="50dp"
        android:layout_height="30dp"
        android:layout_margin="10dp"
        android:background="@drawable/backspace_btn"
        android:clickable="true"
        android:textColor="#000000"
        android:textSize="18sp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_marginTop="30dp"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:background="@drawable/edge"
            android:orientation="horizontal">


            <LinearLayout
                android:id="@+id/linearLayout2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="20dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="#"
                            android:textColor="#000000"
                            android:textSize="15dp" />

                        <TextView
                            android:id="@+id/view_one_date"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="#210324"
                            android:textColor="#000000"
                            android:textSize="15dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="#"
                            android:textColor="#000000"
                            android:textSize="15dp" />

                        <TextView
                            android:id="@+id/view_one_name"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="#생일"
                            android:textColor="#000000"
                            android:textSize="15dp" />
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>


            <ImageView
                android:id="@+id/ivEtc"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignEnd="@id/ivDelete"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="30dp"
                android:layout_marginRight="40dp"
                android:layout_marginBottom="20dp"
                app:srcCompat="@drawable/edit_btn" />

            <ImageView
                android:id="@+id/ivDelete"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignEnd="@id/linearLayout2"
                android:layout_marginTop="30dp"
                app:srcCompat="@drawable/delete_btn" />

        </RelativeLayout>

        <ImageView
            android:id="@+id/view_one_img"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:background="@drawable/background"
            android:adjustViewBounds="true"
            android:src="@drawable/food3" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edge"
            android:orientation="vertical"
            android:padding="20dp">

            <ImageView
                android:id="@+id/view_one_heart"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginEnd="351dp"
                android:layout_marginBottom="8dp"
                android:src="@drawable/heart" />

            <TextView
                android:id="@+id/view_one_story"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:padding="20dp"
                android:text="story"
                android:textAllCaps="true"
                android:textColor="#000000"
                android:textSize="15dp" />


        </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>